<%= nav_bar :fixed => :top, :brand => "Twitter For Friends", :responsive => true do %>
    <%= menu_group do %>
        <%= menu_item "Home", root_path %>
        <%= menu_divider %>
        <%= menu_item "Friends", friends_path %>
        <%= menu_divider %>
        <%= menu_item "Tweets", tweets_path %>
        <%= menu_divider %>
        <%= menu_item "Photos", photos_path %>
        <%= menu_divider %>   
        <%= menu_item "Videos", videos_path %>
    <% end %>
    <%= menu_group :pull => :right do %>
        <% if current_friend %>
            <%= drop_down current_friend.email do %>
                <%= menu_item "My Account", edit_friend_registration_path %>
                <%= menu_divider %>
                <%= menu_item "Log Out", destroy_friend_session_path, :method => :delete %>
            <% end %>
        <% else %>
            <%= menu_item "Sign In", new_friend_session_path %>
        <% end %>
    <% end %>
<% end %>