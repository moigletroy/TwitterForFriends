<h1>Listing friends </h1>

<table cellpadding="5" cellspacing="5">
  <tr>
    <th>Name</th>
    <th>Last Activity</th>
    <% if current_friend.admin? %>
    <th></th>
    <th></th>
    <th></th>
    <% end %>
  </tr>

<% @friends.each do |friend| %>
  <tr>
    <td><%= friend.name %></td>
    <td><%= time_ago_in_words(friend.updated_at) %> ago</td>
    <% if current_friend.admin? %>
    <td><%= link_to 'Show', friend %></td>
    <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
    <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% if current_friend.admin? %>
<%= link_to 'Add New Friend', new_friend_path %>
<% end %>