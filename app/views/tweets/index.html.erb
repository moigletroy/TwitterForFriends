<h1>All tweets</h1>
<%= paginate @tweets %>
<%= render 'form' %>

<% @tweets.each do |tweet| %>
<div class="tweet">
    <div class="when"><%= time_ago_in_words( tweet.created_at ) %> ago</div>
    <div class="friend"><%= tweet.friend.try(:name) %></div>
    <div class="message"><%= tweet.message %></div>
    <% if current_friend.admin? %>
    <div class="admin">
      <%= link_to 'Show', tweet %>
      <%= link_to 'Edit', edit_tweet_path(tweet) %>
      <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
    <% end %>
  </tr>
</div>
<% end %>

<br />

<%= link_to 'New Tweet', new_tweet_path %>
