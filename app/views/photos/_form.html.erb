<%= form_for(@photo) do |f| %>
  <% if @photo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

      <ul>
      <% @photo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= image_tag @photo.image_url(:thumb) if @photo.image_url %>
    <%= f.file_field :image %>

    <%= f.text_field :remote_image_url, placeholder: "...or enter image url here...", size: "60", style: "width:300px;"  %>

  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
